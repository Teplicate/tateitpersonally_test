<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/orange</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="titles_style">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:padding">18dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="titles_grid_style">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:padding">18dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_columnWeight">4</item>
        <item name="android:layout_column">0</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_width">50dp</item>
    </style>

    <style name="titles_grid_style_top">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:padding">18dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_columnWeight">2.2</item>
        <item name="android:layout_column">0</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_width">50dp</item>
    </style>

    <style name="input_style">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:padding">18dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="input_grid_style">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:padding">18dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_column">1</item>
        <item name="android:layout_columnWeight">4</item>

    </style>
</resources>
